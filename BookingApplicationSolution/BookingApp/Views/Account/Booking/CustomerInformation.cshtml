@model BookingApp.Entities.Customer
<head><link href="~/Content/StyleSheetCustomerInfo.css" rel="stylesheet" /></head>
<body>

<div class="container, stylez">
    
    <h2> Customer Information</h2>
    <br/>
    <p> Please fill in your information.</p>
    <br/>
    <br/>
    @using (Html.BeginForm("CustomerInformation", "Booking"))
    {
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Fornavn", new {style = "width:100px"})
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>

        </div>
        <br/>
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Efternavn", new {style = "width:100px"})
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>

        </div>
        <br/>
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Mobilnummer", new {style = "width:100px"})
                @Html.EditorFor(model => model.Telephone)
                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
            </div>

        </div>
        <br/>
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Email", new {style = "width:100px"})
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            </div>

        </div>
        <br/>
        <input type="submit" value="Confirm" class="btn btn-success"/>



    }
</div>
</body>