@model BookingApp.Entities.Customer
@{
    ViewBag.Title = "BookingCheckout";
}

<h2>Booking Checkout</h2>

 @*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
