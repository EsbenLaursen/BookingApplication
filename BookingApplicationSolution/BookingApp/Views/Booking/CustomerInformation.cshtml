@model BookingApp.Models.CustomerInfoViewModel

<div class="container">
    @using (Html.BeginForm("BookingCheckout", "Booking"))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Fornavn")
                @Html.EditorFor(model => model.Customer.FirstName)
                @Html.ValidationMessageFor(model => model.Customer.FirstName)
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-6"></div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Efternavn")
                @Html.EditorFor(model => model.Customer.LastName)
                @Html.ValidationMessageFor(model => model.Customer.LastName)
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-6"></div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Mobilnummer")
                @Html.EditorFor(model => model.Customer.Telephone)
                @Html.ValidationMessageFor(model => model.Customer.Telephone)
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-6"></div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Email")
                @Html.EditorFor(model => model.Customer.Email)
                @Html.ValidationMessageFor(model => model.Customer.Email)

            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-6"></div>
        </div>

        <input type="submit" value="Confirm" class="btn btn-success" />



        }
</div>
