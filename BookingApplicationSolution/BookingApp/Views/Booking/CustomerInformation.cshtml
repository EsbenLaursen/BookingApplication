@model DLL.Entities.Customer
<head><link href="~/Content/StyleSheetCustomerInfo.css" rel="stylesheet" /></head>
<body>

    <div class="progress">
        <div class="circle done">
            <span class="label">1</span>
            <span class="title">Dates</span>
        </div>
        <span class="bar done"></span>
        <div class="circle done">
            <span class="label">2</span>
            <span class="title">Rooms</span>
        </div>
        <span class="bar done"></span>
        <div class="circle active">
            <span class="label">3</span>
            <span class="title">Info</span>
        </div>
        <span class="bar"></span>
        <div class="circle">
            <span class="label">4</span>
            <span class="title">Confirm</span>
        </div>
    </div>

<div class="container, stylez">
    
    <h2> Customer Information</h2>
    <br/>
    <p> Please fill in your information.</p>
    <br/>
    <br/>
    @using (Html.BeginForm("CustomerInformation", "Booking"))
    {
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("First name", new {style = "width:100px"})
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>

        </div>
        <br/>
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Last name", new {style = "width:100px"})
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>

        </div>
        <br/>
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Telephone", new {style = "width:100px"})
                @Html.EditorFor(model => model.Telephone)
                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
            </div>

        </div>
        <br/>
        <div class="row">
            <div class="col-sm-5">
                @Html.Label("Email", new {style = "width:100px"})
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            </div>

        </div>
        <br/>
        <input type="submit" value="Confirm" class="btn btn-success"/>



    }
</div>
</body>